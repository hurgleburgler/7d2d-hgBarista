<configs>
  <insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">
    <lootgroup name="hgDR_milk">
      <item name="drinkJarMilk" count="1" loot_prob_template="high"/>
      <item name="foodCanMilk" count="1" loot_prob_template="med"/>
      <item name="drinkJarCreamer" count="1" loot_prob_template="low"/>
    </lootgroup>

    <lootgroup name="groupCoffeePowderBundle" count="all">
      <item name="coffeePowderBundle" count="1"/>
    </lootgroup>

    <lootgroup name="groupCoffeeRecipesT1">
      <item name="drinkFilthyJoeRecipe"/>
      <item name="drinkWastelandWheatgrassRecipe"/>
      <item name="drinkHotCupOfJoeRecipe"/>
      <item name="drinkIcedCoffeeRecipe"/>
      <item name="drinkColdBrewCoffeeRecipe"/>
    </lootgroup>

    <lootgroup name="groupCoffeeRecipesT2">
      <item name="drinkJarPurifiedWaterRecipe"/>
      <item name="drinkShotOfEspressoRecipe"/>
      <item name="drinkAmericanoRecipe"/>
      <item name="drinkBlackStrapCoffeeRecipe"/>
      <item name="drinkPremiumColdBrewRecipe"/>
    </lootgroup>

    <lootgroup name="groupCoffeeRecipesT3">
      <item name="drinkDoubleTapRecipe"/>
      <item name="drinkCappuccinoRecipe"/>
      <item name="drinkCafeLatteRecipe"/>
      <item name="drinkCafeCremeRecipe"/>
      <item name="drinkCafeBreveRecipe"/>
      <item name="drinkAffogatoRecipe"/>
    </lootgroup>

    <lootgroup name="groupCoffeeRecipesT4">
      <item name="drinkTripwireRecipe"/>
      <item name="drinkSpringHeeledJoeRecipe"/>
      <item name="drinkPumpkinSpikeLatteRecipe"/>
      <item name="drinkBearBrewRecipe"/>
      <item name="drinkBulletproofCoffeeRecipe"/>
      <item name="drinkLondonFogLatteRecipe"/>
      <item name="drinkNightmareNitroColdBrewRecipe"/>
    </lootgroup>

    <lootgroup name="groupCoffeeRecipesT5">
      <item name="drinkQuadRecipe"/>
      <item name="drinkDragonsBreathEspressoRecipe"/>
      <item name="drinkApexBrewRecipe"/>
      <item name="drinkPhoenixFireLatteRecipe"/>
      <item name="drinkGrandpasLastStandRecipe"/>
    </lootgroup>

    <!-- Combat/battle focused coffee drinks -->
    <lootgroup name="groupBattleCoffee">
      <item name="drinkTripwire"/>
      <item name="drinkSpringHeeledJoe"/>
      <item name="drinkPumpkinSpikeLatte"/>
      <item name="drinkBearBrew"/>
      <item name="drinkBulletproofCoffee"/>
      <item name="drinkLondonFogLatte"/>
      <item name="drinkNightmareNitroColdBrew"/>
    </lootgroup>

    <!-- Legendary/endgame coffee recipes -->
    <lootgroup name="groupLegendaryCoffee">
        <item name="drinkGrandpasLastStand"/>
        <item name="drinkPhoenixFireLatte"/>
        <item name="drinkDragonsBreathEspresso"/>
        <item name="drinkApexBrew"/>
        <item name="drinkQuad"/>
    </lootgroup>

  </insertAfter>

  <!-- Add coffee bundle to various air drop tiers -->
  <!-- T1 - Basic tier -->
  <append xpath="/lootcontainers/lootgroup[@name='groupAirDropT1Bundles']">
    <item group="groupCoffeePowderBundle" loot_prob_template="low"/>
  </append>

  <!-- T2 - Medium tier -->
  <append xpath="/lootcontainers/lootgroup[@name='groupAirDropT2Bundles']">
    <item group="groupCoffeePowderBundle" loot_prob_template="med"/>
  </append>

  <!-- T3 - Advanced tier -->
  <append xpath="/lootcontainers/lootgroup[@name='groupAirDropT3Bundles']">
    <item group="groupCoffeePowderBundle" loot_prob_template="medHigh"/>
  </append>

  <!-- T4 - High tier -->
  <append xpath="/lootcontainers/lootgroup[@name='groupAirDropT4Bundles']">
    <item group="groupCoffeePowderBundle" loot_prob_template="high"/>
  </append>

  <!-- T5 - Top tier -->
  <append xpath="/lootcontainers/lootgroup[@name='groupAirDropT5Bundles']">
    <item group="groupCoffeePowderBundle" loot_prob_template="high"/>
  </append>

  <append xpath="/lootcontainers">
    <lootcontainer id="247" name="coffeePowderBundle" count="1" size="6,2"
                   destroy_on_close="true"
                   sound_open="SupplyDrops/open_supply_crate"
                   sound_close="SupplyDrops/close_supply_crate"
                   open_time="0.25"
                   loot_quality_template="qualBaseTemplate">
      <item group="groupCoffeePowderBundle"/>
    </lootcontainer>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupFoodDriedRations']">
    <item name="resourcePowderedMilk" count="1,2" loot_prob_template="med"/>
    <item name="resourceInstantCoffee" count="1,2" loot_prob_template="med"/>
    <item name="resourcePowderedCreamer" count="1,2" loot_prob_template="med"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsUncommon']">
    <item name="resourcePowderedMilk" count="1,3"/>
  </append>

  <!-- Add milk products to drink groups -->
  <append xpath="/lootcontainers/lootgroup[@name='drinks']">
    <item group="hgDR_milk"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupRefrigerator02']">
    <item group="hgDR_milk"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupDrinksUncommon']">
    <item group="hgDR_milk"/>
  </append>

    <!-- Add to POI-specific locations -->
  <append xpath="/lootcontainers/lootgroup[@name='groupCoffeeMaker01']">
    <item name="resourceInstantCoffee" count="1,2" loot_prob_template="med"/>
    <item name="drinkJarCreamer" count="1" loot_prob_template="low"/>
    <item name="resourcePowderedCreamer" count="1" loot_prob_template="med"/>
    <item group="groupCoffeeRecipesT1" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT2" loot_prob_template="veryLow"/>
  </append>

    <!-- Add to kitchen/cooking locations -->
  <append xpath="/lootcontainers/lootgroup[@name='groupCookingTools']">
    <item name="resourcePowderedMilk" count="1,2" loot_prob_template="med"/>
    <item name="resourcePowderedCreamer" count="1,2" loot_prob_template="med"/>
  </append>

    <!-- Add rare ingredients -->
  <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsRare']">
    <item name="resourcePowderedMilk" count="2,4"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupShamwayShelves']">
    <item group="groupCoffeeRecipesT1" loot_prob_template="med"/>
    <item group="groupCoffeeRecipesT2" loot_prob_template="low"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupShamwayCrate']">
    <item group="groupCoffeeRecipesT2" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT3" loot_prob_template="veryLow"/>
  </append>

  <!-- Add lower tier recipes to common food containers -->
  <append xpath="/lootcontainers/lootgroup[@name='groupCupboard']">
    <item group="groupCoffeeRecipesT1" loot_prob_template="low"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupRefrigerator']">
    <item group="groupCoffeeRecipesT1" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT2" loot_prob_template="veryLow"/>
  </append>

  <!-- Add mid-tier recipes to working stiffs (they might have break room coffee machines) -->
  <append xpath="/lootcontainers/lootgroup[@name='groupWorkingStiffs01']">
    <item group="groupCoffeeRecipesT2" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT3" loot_prob_template="veryLow"/>
  </append>

  <!-- Add high tier recipes to hardened chests -->
  <append xpath="/lootcontainers/lootgroup[@name='groupHardenedChestT4']">
    <item group="groupCoffeeRecipesT4" loot_prob_template="low"/>
  </append>

  <!-- Bookstore shelves -->
  <append xpath="/lootcontainers/lootgroup[@name='groupCrackabookShelves']">
    <item group="groupCoffeeRecipesT1" loot_prob_template="med"/>
    <item group="groupCoffeeRecipesT2" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT3" loot_prob_template="veryLow"/>
  </append>

  <!-- Soda fountain (often found in coffee shops/diners) -->
  <append xpath="/lootcontainers/lootgroup[@name='groupSodaFountain']">
    <item group="groupCoffeeRecipesT1" loot_prob_template="med"/>
    <item group="groupCoffeeRecipesT2" loot_prob_template="low"/>
  </append>

  <!-- Book piles (can contain coffee recipe books) -->
  <append xpath="/lootcontainers/lootgroup[@name='groupBookPile']">
    <item group="groupCoffeeRecipesT1" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT2" loot_prob_template="veryLow"/>
  </append>

  <!-- Add to fetch quest reward pools -->
  <append xpath="/lootcontainers/lootgroup[@name='groupQuestFoodT2']">
    <item group="groupCoffeePowderBundle"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupQuestFoodT3']">
    <item group="groupCoffeePowderBundle"/>
  </append>

  <!-- Add to trader reward pools -->
  <append xpath="/lootcontainers/lootgroup[@name='groupQuestT2Food']">
    <item group="groupCoffeePowderBundle" count="1"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupQuestT3Food']">
    <item group="groupCoffeePowderBundle" count="1"/>
  </append>

  <!-- Add legendary coffee to appropriate high-tier loot -->
  <append xpath="/lootcontainers/lootgroup[@name='groupHardenedChestT5']">
    <item group="groupCoffeeRecipesT5" loot_prob_template="low"/>
    <item group="groupLegendaryCoffee" loot_prob_template="veryLow"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='rareFoodDrink']">
    <item group="groupCoffeeRecipesT4" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT5" loot_prob_template="veryLow"/>
    <item group="groupLegendaryCoffee" loot_prob_template="veryLow"/>
  </append>

  <!-- Add battle coffee to military/gun loot -->
  <append xpath="/lootcontainers/lootgroup[@name='groupArmyTruck']">
    <item group="groupBattleCoffee" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT4" loot_prob_template="veryLow"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupGunSafeSecure']">
    <item group="groupBattleCoffee" loot_prob_template="veryLow"/>
    <item group="groupCoffeeRecipesT4" loot_prob_template="veryLow"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupShotgunMessiahCrate']">
    <item group="groupBattleCoffee" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT4" loot_prob_template="veryLow"/>
  </append>

  <!-- Add to bookstore rare finds -->
  <append xpath="/lootcontainers/lootgroup[@name='groupCrackabookCrate']">
    <item group="groupCoffeeRecipesT2" loot_prob_template="med"/>
    <item group="groupCoffeeRecipesT3" loot_prob_template="low"/>
    <item group="groupCoffeeRecipesT4" loot_prob_template="veryLow"/>
    <item group="groupLegendaryCoffee" loot_prob_template="veryLow"/>
  </append>

  <!-- Remove legacy coffee from loot -->
  <remove xpath="/lootcontainers/lootgroup[@name='drinks']/item[@name='drinkJarCoffee']"/>
  <remove xpath="/lootcontainers/lootgroup[@name='groupDrinksUncommon']/item[@name='drinkJarCoffee']"/>
  <remove xpath="/lootcontainers/lootgroup[@name='groupCoffeeMaker01']/item[@name='drinkJarCoffee']"/>
  <remove xpath="/lootcontainers/lootgroup[@name='twitch_drinkspecial1']/item[@name='drinkJarCoffee']"/>
  <remove xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT0']/item[@name='drinkJarCoffeeSchematic']"/>

  <remove xpath="/lootcontainers/lootgroup[@name='rareFoodDrink']/item[@name='drinkJarBlackStrapCoffee']"/>
  <remove xpath="/lootcontainers/lootgroup[@name='groupDrinksRare']/item[@name='drinkJarBlackStrapCoffee']"/>
  <remove xpath="/lootcontainers/lootgroup[@name='twitch_drinkspecial2']/item[@name='drinkJarBlackStrapCoffee']"/>

</configs>