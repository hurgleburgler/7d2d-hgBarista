<hurgleburgler>

    <!-- Add items to existing food groups -->
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='foodSupplies']">
        <item name="resourcePowderedCreamer" count="1"/>
        <item name="resourceInstantCoffee" count="1,2"/>
    </append>

    <append xpath="/traders/trader_item_groups/trader_item_group[@name='preparedDrink']">
        <item name="drinkJarMilk" count="1"/>
        <item name="drinkFilthyJoe" count="1,3"/>
        <item name="drinkWastelandWheatgrass" count="1,3"/>
        <item name="drinkHotCupOfJoe" count="1,2"/>
        <item name="drinkIcedCoffee" count="1,2"/>
        <item name="drinkColdBrewCoffee" count="1"/>
        <item name="drinkJarPurifiedWater" count="1"/>
        <item name="drinkShotOfEspresso" count="1"/>
        <item name="drinkAmericano" count="1"/>
        <item name="drinkBlackStrapCoffee" count="1"/>
    </append>

    <append xpath="/traders/trader_item_groups/trader_item_group[@name='farmingCookingRecipes']">
        <item name="drinkJarMilk" count="1,2"/>
        <item name="drinkFilthyJoe" count="2,3"/>
        <item name="drinkHotCupOfJoe" count="2,3"/>
        <item name="drinkIcedCoffee" count="2,3"/>
    </append>

    <append xpath="/traders/trader_item_groups/trader_item_group[@name='cannedfood']">
        <item name="drinkJarMilk"/>
        <item name="resourceInstantCoffee"/>
    </append>

    <!-- Create specialized preserved food group -->
    <append xpath="/traders/trader_item_groups/trader_item_group[@name='hgDR_preservedFood']">
        <item name="resourceInstantCoffee" count="2,8"/>
        <item name="resourcePowderedMilk" count="2,8"/>
        <item name="resourcePowderedCreamer" count="2,8"/>
    </append>

    <remove xpath="/traders/trader_item_groups/trader_item_group[@name='preparedDrink']/item[@name='drinkJarCoffee']"/>
    <remove xpath="/traders/trader_item_groups/trader_item_group[@name='farmingCookingRecipes']/item[@name='drinkJarCoffeeSchematic']"/>

</hurgleburgler>
